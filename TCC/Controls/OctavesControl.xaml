<UserControl x:Class="Synthesizer.Controls.OctavesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Synthesizer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="61" d:DesignWidth="800">
    <Grid Height="61" Width="218">
        <Grid Width="70" Grid.ColumnSpan="2">

            <Grid.RowDefinitions>

                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>


            <Label Grid.Row="0"
               Foreground="White" Margin="-4,0,4,0"
               
               >
                Oitavas
            </Label>

            <Border Grid.Row="1" 
            BorderBrush="#9E9E9E"
            BorderThickness="3"
            CornerRadius="2"
            >
                <ComboBox 
               Background="Black"
               >
                    <ComboBoxItem IsSelected="True" Content="2"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="8"/>
                </ComboBox>
            </Border>

        </Grid>
    </Grid>
</UserControl>
