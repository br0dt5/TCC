<UserControl x:Class="Synthesizer.Controls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Synthesizer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800">
    <Grid Height="32" Background="Transparent">
        <Menu VerticalAlignment="Center" Foreground="White" Background="Transparent">
            <MenuItem Header="Arquivos" Background="#444444" BorderThickness="1,1,1,1" BorderBrush="DarkGray">

                <MenuItem Header="Abrir um Arquivo" Foreground="Black" Click="MenuItemAbrir_Click"></MenuItem>

                <MenuItem Header="Salvar um Arquivo" Foreground="Black" Click="MenuItemSalvar_Click"></MenuItem>
                
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
